#include<stdio.h>
#include<stdlib.h>
#include<string.h>
#define max_size 5

int stack[max_size],top=-1;
void push();
void pop();
void display();
void pali();

void main()
{
    int ch;
    while(1)
    {
        printf("\n----STACK OPERATIONS----\n");
        printf("1.Push\n");
        printf("2.Pop\n");
        printf("3.Palindrome\n");
        printf("4.Display\n");
        printf("5.Exit\n");
        printf("-------------------------\n");
        printf("Enter your choice:\t");
        scanf("%d",&ch);
        switch(ch)
        {
            case 1:push();
            break;
            case 2:pop();
            break;
            case 3:pali();
            break;
            case 4:display();
            break;
            case 5:exit(0);
            break;
            default:printf("\nInvalid choice\n");

        }
    }
}
void push()
{
    int item,n;
    if(top==(max_size-1))
        printf("\nStack Underflow:");
    else{
        printf("Enter the element to be inserted:\t");
        scanf("%d",&item);
        top=top+1;
        stack[top]=item;
    }
}
void pop()
{
    int item;
    if(top==-1)
        printf("\nStack Overflow:");
    else{
        item=stack[top];
        top=top-1;
        printf("\nThe popped element is:%d\t",item);
    }
}
void display()
{
    int i;
    if(top=-1)
    {
        printf("\nStack is Empty:");
    }else{
    printf("\nThe stack elements are:\n");
    for(i=top;i>=0;i--)
        printf("%d\n",stack[i]);
    }
}
void pali()
{
    int num[max_size];
    int i,len,flag=1;
    len=top+1;
    for(i=0;i<len;i++)
    {
        num[i]=stack[i];
    }
    for(i=0;i<len/2;i++)
    {
        if(num[i]!=num[len-1-i])
        {
            flag=0;
            break;
        }
    }
    printf("\nStack elements are:");
    for(i=0;i<len;i++)
    {
        printf(" %d",num[i]);
    }
    printf("\nReverse Stack elements are:");
    for(i=len-1;i>=0;i--)
    {
        printf(" %d",num[i]);
    }
    if(flag==1)
        printf("\nStack elements are PALINDROME\n");
    else
        printf("\nStack elements are NOT PALINDROME\n");
}
